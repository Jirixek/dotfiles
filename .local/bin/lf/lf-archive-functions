#!/bin/sh
# TODO: status bar

# First arg: $id
# ...: $fx


lf_check_filename () {
	if [ -z "$filename" ]; then
		lf -remote "send $id echoerr Error while creating an archive: invalid path"
		exit 1
	elif [ -e "$filename" ] || [ -e "${filename}.$2" ]; then
		lf -remote "send $id echoerr Error while creating an archive: file exists"
		exit 1
	fi
}

lf_get_filename () {
	printf 'File name: '
	read filename
}
